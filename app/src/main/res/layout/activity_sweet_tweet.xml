<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_10sdp"
    tools:context=".activity.SweetTweetActivity">

    <EditText
        android:id="@+id/etTweetSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_tweet"
        android:layout_marginTop="@dimen/_5sdp"
        android:padding="@dimen/_10sdp"
        android:singleLine="true"
        android:imeOptions="actionSearch"
        android:fontFamily="@font/poppins"
        android:textColor="@color/colorGrey"
        app:layout_constraintBottom_toTopOf="@id/tvSort"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSort"
        style="@style/AppTheme.Text"
        android:text="@string/sort"
        android:layout_width="wrap_content"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintBottom_toTopOf="@id/rvTweet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/rgSort"
        app:layout_constraintTop_toBottomOf="@id/etTweetSearch"/>
    <RadioGroup
        android:id="@+id/rgSort"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintBottom_toTopOf="@id/rvTweet"
        app:layout_constraintLeft_toRightOf="@id/tvSort"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/etTweetSearch">
        <RadioButton
            android:id="@+id/rdRetweetCount"
            style="@style/AppTheme.Text"
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:text="Most Retweet Count"/>
        <RadioButton
            android:id="@+id/rdFavoriteCout"
            style="@style/AppTheme.Text"
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:text="Most Favorite Count"/>
    </RadioGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTweet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Hello World!"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSort" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>